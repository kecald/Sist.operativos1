#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <sys/types.h>

int main() {
    int N = 5; // NÃºmero de hijos a crear
    int i;
    pid_t pid;

    printf("PID del proceso padre: %d\n", getpid());

    for (i = 0; i < N; i++) {
        pid = fork();

        if (pid < 0) {
            fprintf(stderr, "Error al crear un nuevo proceso\n");
            exit(1);
        } else if (pid == 0) {
            printf("PID del hijo %d: %d\n", i + 1, getpid());
            exit(0);
        }
    }

    for (i = 0; i < N; i++) {
        wait(NULL); // Espera a que todos los hijos terminen
    }

    return 0;
}
